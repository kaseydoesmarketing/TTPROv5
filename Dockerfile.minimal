# Minimal Railway service for testing TitleTesterPro backend
FROM python:3.11-slim

WORKDIR /app

# Install only FastAPI and uvicorn
RUN pip install fastapi==0.116.1 uvicorn==0.32.1

# Copy minimal files
COPY minimal_main.py .
COPY start_minimal.sh .

# Make start script executable
RUN chmod +x start_minimal.sh

# Use Railway's PORT  
ENV PORT=${PORT:-8000}

# Expose port 8000
EXPOSE 8000

# Use minimal start script
CMD ["./start_minimal.sh"]